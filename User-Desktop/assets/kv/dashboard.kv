# dashboard.kv

<DashboardScreen>:
    name: 'dashboard'
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Dashboard'
            font_size: '24sp'
            size_hint_y: None
            height: '50dp'
        
        GridLayout:
            cols: 2
            padding: 10
            spacing: 10
            
            Button:
                text: 'Owner Management'
                on_release: app.root.current = 'owner_management'
                
            Button:
                text: 'Property Management'
                on_release: app.root.current = 'property_management'
                
            Button:
                text: 'Search & Report'
                on_release: app.root.current = 'search_report'
                
            Button:
                text: 'Settings'
                on_release: app.root.current = 'settings'
        
        Label:
            text: 'Recent Activity'
            font_size: '18sp'
            size_hint_y: None
            height: '40dp'
        
        ScrollView:
            GridLayout:
                id: activity_log
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                
                # Placeholder for activity log items
                Label:
                    text: 'No recent activity.'
                    size_hint_y: None
                    height: '30dp'