# main.kv

#:kivy 2.0.0

<MainScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # White background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Welcome to User-Desktop App'
            font_size: 24
            size_hint_y: None
            height: 50
            color: 0, 0, 0, 1  # Black text on white background

        Button:
            text: 'Owner Management'
            background_color: 0.2, 0.6, 1, 1  # Blue
            color: 1, 1, 1, 1  # White text
            on_press: app.change_screen('owner_management')

        Button:
            text: 'Property Management'
            background_color: 0.2, 0.8, 0.2, 1  # Green
            color: 1, 1, 1, 1  # White text
            on_press: app.change_screen('property_management')

        Button:
            text: 'Search & Report'
            background_color: 1, 0.6, 0.2, 1  # Orange
            color: 1, 1, 1, 1  # White text
            on_press: app.change_screen('search_report')

        Button:
            text: 'Settings'
            background_color: 0.6, 0.2, 1, 1  # Purple
            color: 1, 1, 1, 1  # White text
            on_press: app.change_screen('settings')

        Button:
            text: 'Exit'
            background_color: 1, 0.2, 0.2, 1  # Red
            color: 1, 1, 1, 1  # White text
            on_press: app.stop()